{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run debug",
      "command": "cargo",
      "args": ["run"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [
        "$rustc"
      ]
    },
    {
      "label": "Run release",
      "command": "cargo",
      "args": ["run", "--release"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [
        "$rustc"
      ]
    }
  ]
}
